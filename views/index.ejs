<!DOCTYPE html>
<html>
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/nav.ejs") %>

    <div class="blogs content">
      <h2 class="index-title">All Blogs</h2>
      <% if(blogs.length > 0){ %> <% blogs.forEach((blog)=>{ %>
      <a class="single-blog" href="/blogs/<%= blog._id %>">
        <h3 class="name"><%= blog.title %></h3>
        <p class="body"><%= blog.snippet %></p>
        <p class="date">Created At: <%= blog.createdAt.toLocaleString() %></p>
      </a>

      <% }) %> <% } %>
    </div>
    <%- include("./partials/footer.ejs") %>
  </body>
</html>
